<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Họ và tên : "
            android:textSize="25dp"
            android:layout_marginTop="5dp"
            android:id="@+id/ten"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#F00"
            android:layout_toRightOf="@id/ten"
            android:id="@+id/validName"/>

        <EditText
            android:inputType="text"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/ten"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Mã số sinh viên : "
            android:textSize="25dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#F00"
            android:layout_toRightOf="@id/id"
            android:id="@+id/validId"/>

        <EditText
            android:inputType="number"
            android:id="@+id/mssv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/id"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Ngày Sinh : "
            android:textSize="25dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#F00"
            android:layout_toRightOf="@id/date"
            android:id="@+id/validBirth"/>

        <EditText
            android:inputType="date"
            android:id="@+id/ngaysinh"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/date"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Email : "
            android:textSize="25dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#F00"
            android:layout_toRightOf="@id/mail"
            android:id="@+id/validMail"/>

        <EditText
            android:inputType="text"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/mail"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Địa chỉ : "
            android:textSize="25dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#F00"
            android:layout_toRightOf="@id/address"
            android:id="@+id/validDiachi"/>

        <EditText
            android:inputType="text"
            android:id="@+id/diachi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/address"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>